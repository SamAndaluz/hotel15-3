<odoo>
    <data>


        <record id="wk_booking_email" model="mail.template">
            <field name="name">Booking Email</field>
            <field name="subject">Booking Email ${(object.name)}</field>
            <field name="email_from">${(object.env.user.email)|safe}</field>
            <field name="email_to">${(object.email_to_users())|safe}</field>
            <field name="model_id" ref="pos_booking_system.model_booking_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
                <![CDATA[
                <div>Hello,</div><br/>
                <div>The Booking <strong>${object.name}</strong> has been Done for ${object.booking_product_id.name} <strong></strong>. </div>
                ]]>
            </field>
        </record>

    </data>
</odoo>